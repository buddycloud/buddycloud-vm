# local changes will override buddycloud/saltstack

# Try the local version first then fallback to the version at
# https://github.com/buddycloud/saltstack/tree/master/salt
# in other words, /srv/saltstack/salt/prosody/init.sls
# will override github.com/buddycloud/saltstack/prosody/init.sls

fileserver_backend:
  - roots
  - git

# useful for local changes
# recommended that you keep /srv/salt in git
base:
  - /srv/salt

# use the Buddycloud saltstates as fallback
gitfs_remotes:
  - https://github.com/buddycloud/saltstack.git

# put your private keys, certificates and config data into 
# /srv/pillar/buddycloud/init.sls
pillar_roots:
  base:
    - /srv/pillar
